// ===== Gemini AI機能追加 =====
const GEMINI_API_KEY = "AIzaSyDXbJlTPGuSlTg40y9SjirjxAvbgkgx4W4";

async function generateAIFeedback(recognizedText) {
  try {
    // より詳細で具体的なプロンプト
    const prompt = `
あなたは子ども向け英語学習の専門AI先生です。

子どもが英語で「${recognizedText}」と話しました。

以下の要素を含む30-50文字の励ましメッセージを日本語で生成してください：

1. 具体的に良かった点を1つ褒める
2. 簡単な改善提案（あれば）
3. 温かい励ましの言葉

例：
- 「Hello」→「はっきりした発音でえらいね！次は'How are you?'も言ってみよう！」
- 「My name is Tom」→「自己紹介が完璧！nameの発音がとてもきれいでした！」
- 「I like apple」→「好きなものを英語で言えたね！appleの'a'の音がとても上手！」

話した内容: "${recognizedText}"
文字数: 30-50文字
口調: 明るく温かい先生
`;

    const response = await fetch(
      `https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent?key=${GEMINI_API_KEY}`,
      {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          contents: [
            {
              parts: [
                {
                  text: prompt,
                },
              ],
            },
          ],
          generationConfig: {
            temperature: 0.8, // 創造性を上げる
            topK: 40,
            topP: 0.9,
            maxOutputTokens: 100,
          },
        }),
      }
    );

    const data = await response.json();

    if (data.candidates && data.candidates[0] && data.candidates[0].content) {
      let feedback = data.candidates[0].content.parts[0].text;

      // 不要な文字を除去
      feedback = feedback.replace(/[「」『』]/g, '"').trim();

      return feedback;
    } else {
      throw new Error("Gemini API response invalid");
    }
  } catch (error) {
    console.error("Gemini API Error:", error);

    // フォールバック用の多様なメッセージ
    const fallbackMessages = [
      `「${recognizedText}」って言えたね！発音がとてもきれい！`,
      `英語で話してくれてありがとう！「${recognizedText}」完璧だよ！`,
      `すごい！「${recognizedText}」の発音がとても上手でした！`,
      `「${recognizedText}」をはっきり言えてえらいね！次もがんばろう！`,
      `英語チャレンジ成功！「${recognizedText}」の言い方バッチリ！`,
    ];

    return fallbackMessages[
      Math.floor(Math.random() * fallbackMessages.length)
    ];
  }
}
